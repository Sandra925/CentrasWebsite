@page
@using Centras.Models
@using Centras.db
@model Centras.Pages.LoginModel
@{
        <form class="login-form" method="post">
            <!-- Email input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="form2Example1">Email address</label>
                <input type="email" id="email" class="form-control" asp-for="User.Email" required />
            </div>

            <!-- Password input -->
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Password</label>
                <input type="password" id="password" class="form-control" asp-for="User.Password" required />
            </div>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }
            <!-- Submit button -->
            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" id="submit">Sign in</button>

            <div class="text-center">
                <p>Not a member? <a href="/Register">Register</a></p>
            </div>
        <div class="row mb-4">
            <div class="col">
                <a href="#!">Forgot password?</a>
            </div>
        </div>
        </form>

}
