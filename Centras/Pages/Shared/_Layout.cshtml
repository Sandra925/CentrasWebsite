<!DOCTYPE html>
@using Centras.Models
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Centras.db
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Centras</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Centras.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="Images\logo.png" alt="logo" id="logo" class="logo"/>
                <script>
                    document.getElementById('logo').addEventListener('click', function () {
                        window.location.href = "/Index"
                    })
                </script>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Apie Mus</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Rooms">Kambariai</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Service">Paslaugos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Restaurant">Meniu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contacts">Kontaktai</a>
                        </li>
                        @{
                            var userName = HttpContextAccessor.HttpContext.Session.GetString("Name");
                        }
                        <li class="login-nav-item ms-auto">
                          
                            @if (!string.IsNullOrEmpty(userName))
                            {
                            <li class="nav-item text-dark" style="font-size:15px;">Hello, @userName</li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Atsijungti</a>
                            </li>
                            }
                            else
                            {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Login">
                                <i class="bi bi-person-circle"></i>
                            </a>
                            }
                        </li>
                     
                    </ul>
                </div>
            </div>
        </nav>
    </header>
  
    <div class="container">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>