                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="reservation-col">
            <label>Suauge</label>
            <select id="adults" name="adults" class="form-control">
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>
        </div>
        <div class="reservation-col">
            <label>Vaikai</label>
            <select id="children" name="children" class="form-control">
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>
        </div>
        <div class="reservation-col">
            <button type="submit" class="btn btn-block">Rasti Kambarį</button>
        </div>
    </div>
</div>
